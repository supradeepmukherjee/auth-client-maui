<?xml version="1.0" encoding="utf-8" ?>
<ContentView
  x:Class="client_maui.Controls.RoundedBtn"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Name="root"
  Padding="0">

    <Border
        StrokeShape="RoundRectangle 14"
        BackgroundColor="{Binding BackgroundColor,  Source={x:Reference root}}">

        <Grid
            Padding="16,12"
            ColumnDefinitions="Auto,*"
            VerticalOptions="Center">

            <Border
                StrokeShape="Ellipse"
                HeightRequest="28"
                WidthRequest="28"
                BackgroundColor="{StaticResource BgSurface}"
                IsVisible="{Binding Icon,
                 Source={x:Reference root},
                Converter={StaticResource NullToBoolConverter}}">

                <Image
                    Source="{Binding Icon, Source={x:Reference root}}"
                    Aspect="Fill"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
            </Border>

            <Label
                Grid.Column="1"
                Text="{Binding Text, Source={x:Reference root}}"
                TextColor="{Binding TextColor, Source={x:Reference root}}"
                FontSize="15"
                FontAttributes="Bold"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="Center"/>

            <Grid.GestureRecognizers>
                <TapGestureRecognizer
                    Command="{Binding Command, Source={x:Reference root}}" />
            </Grid.GestureRecognizers>

        </Grid>
    </Border>
</ContentView>