<?xml version="1.0" encoding="utf-8" ?>
<ContentView
  x:Class="client_maui.Controls.RoundedBtn"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Name="root"
  Padding="0">

    <Frame
    HasShadow="False"
    Padding="0"
    CornerRadius="{Binding CornerRadius, Source={x:Reference root}}"
    BackgroundColor="{Binding BackgroundColor, Source={x:Reference root}}">
        <Grid Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image Source="{Binding Icon, Source={x:Reference root}}" 
             HeightRequest="30" WidthRequest="30" VerticalOptions="Center"
             IsVisible="{Binding Icon, Source={x:Reference root}, Converter={StaticResource NullToBoolConverter}}" />

            <Button Grid.Column="1"
              Text="{Binding Text, Source={x:Reference root}}"
              Command="{Binding Command, Source={x:Reference root}}"
              BackgroundColor="Transparent"
              TextColor="{Binding TextColor, Source={x:Reference root}}"
              FontAttributes="Bold"
              HorizontalOptions="Fill" />
        </Grid>
    </Frame>
</ContentView>