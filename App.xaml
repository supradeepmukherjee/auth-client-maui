<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:client_maui"
             xmlns:converters="clr-namespace:client_maui.Converters"
             x:Class="client_maui.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
             <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
            <Color x:Key="BgPrimary">#121212</Color>
            <Color x:Key="BgSurface">#1E1E1E</Color>
            <Color x:Key="BorderSubtle">#2A2A2A</Color>
            <Color x:Key="TextPrimary">#FFFFFF</Color>
            <Color x:Key="TextSecondary">#B3B3B3</Color>
            <Color x:Key="Accent">#7C5CFF</Color>
            <Color x:Key="AccentMuted">#5E46CC</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
