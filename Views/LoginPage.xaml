<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="client_maui.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:client_maui.ViewModels"
    Title="Login">

    <VerticalStackLayout Padding="20" Spacing="12">
        <Entry Placeholder="Email or Phone" Text="{Binding Identifier}" />
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />
        <Button Text="Login" Command="{Binding LoginCommand}" />
        <Button Text="Sign in with Google" Command="{Binding SsoGoogleCommand}" />
        <Button Text="Register" Command="{Binding GoToRegisterCommand}"/>
        <Label Text="{Binding Status}" />
    </VerticalStackLayout>
</ContentPage>
